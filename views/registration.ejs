<%-include('./header.ejs') %>

   <!----------------------- Main body Start -------------------------- -->
   <style>
      body {
            background: url(../image/bg-image1.jpg) no-repeat center center/cover ;
      }
 </style>

   <div class="row">
      <div class="col-sm-12">
         <div class="container-xxl">
            <div class="row">
               <section>
                  <div class="container mt-3 pt-3 mb-5 pb-5">
                     <div class="row">
                        <div class="col-12 col-sm-8 col-md-8 m-auto">
                           <div class="card border-0  shadow ">
                              <div class="card-body">
                                 <h1 class="text-center imptext">Registration Now !</h1>
            
                                 <% if(message.length > 0){ %>
                                    <div class="alert alert-danger">
                                       <%= message %>
                                    </div>
            
                                <% } %>
            
                                 <form action="/aminregister" method="post">
                                    <label for="">Full Name</label>
                                    <input type="text" name="name" class="form-control my-1 py-2" placeholder="Enter Name">
                                    <label for="">Email Id</label>
                                    <input type="email" name="email" id="" class="form-control my-1 py-2"
                                       placeholder="Enter Email Id">
                                    <label for="" class="mt-1">Password</label>
                                    <input type="password" name="password" id="" class="form-control my-1 py-2" placeholder="Enter password">
                                    <label for="" class="mt-1">Confirm Password</label>
                                    <input type="password" name="confirmpassword" id="" class="form-control my-1 py-2" placeholder="Enter Confirm password">
                                    <div class="text-center mt-1">
                                     <button class="btn btn-dark btnbg mb-3 px-5">Regiser</button>
                                     <a href="/login" class="nav-link">
                                      <p>Already registered ? <span class="text-info">Sign In</span></p>
                                       </a>
                                    </div>
                                 </form>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </section>
            </div>
         </div>
      </div>
   </div>
   

   <!-------------------------- Main body End  --------------------------->

   <%-include('./footer.ejs') %>